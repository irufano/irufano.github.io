{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
    "no-unused-vars": "warn", // Show warnings for unused variables
    "react/prop-types": "warn", // Show warnings for missing prop types
    "react/react-in-jsx-scope": "warn" // Show warnings if React is not in scope
    // Add more rules here as needed
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}